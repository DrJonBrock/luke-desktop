{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "identifier": "com.lukedesktop.dev",
  "version": "0.1.0",
  "build": {
    "frontend": {
      "build": "npm run build",
      "dev": "npm run dev"
    },
    "devUrl": "http://localhost:1420",
    "distDir": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Luke Desktop",
        "width": 800,
        "height": 600,
        "resizable": true,
        "center": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": {
        "default": [
          "app:default",
          "window:default",
          "fs:default",
          "shell:allow-open",
          "dialog:allow-open",
          "protocol:asset",
          "protocol:http",
          "protocol:https"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "copyright": "Â© 2024 Luke Desktop",
    "targets": ["app", "deb", "updater"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "shortDescription": "Claude Desktop alternative with MCP server support",
    "longDescription": "A desktop application built with Tauri and React that provides a Claude interface with Model Context Protocol server integration",
    "deb": {
      "depends": []
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null
    },
    "windows": {
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "certificateThumbprint": null,
      "wix": {
        "language": ["en-US"]
      }
    }
  }
}